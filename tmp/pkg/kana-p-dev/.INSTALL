post_install() {
	post_upgrade

	systemctl start slim
}

pre_upgrade() {
	systemctl disable slim

	grep -v "#KANA-P" /etc/sudoers > /tmp/kana-p ; mv /tmp/kana-p /etc/sudoers
}

post_upgrade() {
	systemctl enable slim

	echo "%wheel ALL=(ALL) ALL #KANA-P" >> /etc/sudoers
}

pre_remove()
{
	pre_upgrade

	systemctl stop slim
}
